<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="../resources/css/style.css">
    
    <title>categories</title>
</head>
<body>
   
        <% include ../partials/header.ejs%>
        <% include ../partials/user-navigation.ejs%>
    
    <main>

            <div class="section" >
                    <ul class="breadcrumb">
                            <li><a href="index">Home</a></li>
                            <li><a href="categories">categories</a></li>
                    </ul>
                    
                    <% if(typeof error!=='undefined'){%>
                        <p id="errormsg"><%= error%> <%= catalogcategory%></p>
                   <%} else{
                    for(var i=0;i< uniquecategories.length;i++){%>
                        <h3><%= uniquecategories[i].trim()%></h3>
                        <ul>

                    <% if(typeof catobj!=='undefined'){
                        for(var j=0;j< catobj.length;j++){
                            if(uniquecategories[i]==catobj[j].catalogcategory){%>
                                <li><a href="items?itemcode=<%= catobj[j].itemcode.trim()%>"><%= catobj[j].itemname.trim()%></a></li>
                            <%}
                        }
                    }%>
                    </ul>
                    <%}
                }%>

                   
               
           
        
                
            </div>
                       
    </main>
    
        <aside>
            <%include ../partials/site-navigation.ejs%>
        </aside>

        <% include ../partials/footer.ejs%>
    
   
    
</body>
</html>