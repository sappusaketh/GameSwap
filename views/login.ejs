<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="../resources/css/style.css">
    <link rel="stylesheet" type="text/css" href="../resources/css/login.css">

    <title>Login</title>
</head>
<body>
    
    
        <% include ../partials/header.ejs%>
        <% include ../partials/user-navigation.ejs%>
 
    
    <main>
       
        <div class="section">

            <ul class="breadcrumb">
                <li><a href="login">Login</a></li>
            </ul>
                <div class="login">
                <form id="login" action="/login" method="POST">
                    <% if(typeof Email!=='undefined'){
                     
                        if(typeof loginerrors!=='undefined' && typeof errorparamarray!=='undefined'){%>
                            <div class="floating-form">
                                <div class="floating-label">  
                                    <input class="floating-input" type="text" name="Email" value="<%= Email%>" size="30">
                                    <span class="highlight"></span>
                                    <label>Email</label>
                                   
                            
                            <%if(errorparamarray.includes('Email') && errorparamarray.includes('password') ){
                               %>
                                
                            <span class='invalid'>please enter valid email</span></div></div>
                            <div class="floating-form">
                                <div class="floating-label">  
                                    <input class="floating-input" type="password" name="password" placeholder=" " size="30"><span class='invalid'>password contains invalid characters</span>
                                        <span class="highlight"></span>
                                        <label>password</label>
                                </div>
                            </div>
                            <%}
                            else if(errorparamarray.includes('Email') ){%>
                            
                                <span class='invalid'>please enter valid email</span></div></div>
                                <div class="floating-form">
                                    <div class="floating-label">  
                                         <input class="floating-input" type="password" placeholder=" " name="password"size="30">
                                         <span class="highlight"></span>
                                         <label>password</label>
                                    </div>
                                </div>
                            
                            <%}
                            else if(errorparamarray.includes('password')){%>
                                
                               </div></div>
                            <div class="floating-form">
                                <div class="floating-label">  
                                    <input class="floating-input" type="password" placeholder=" " name="password"  size="30"><span class='invalid'>password contains invalid characters</span>
                                    <span class="highlight"></span>
                                    <label>password</label>
                               </div>
                            </div>
                            <%}

                        }else{%>
                            <div class="floating-form">
                                <div class="floating-label">  
                                    <input class="floating-input"  type="text" name="Email" value="<%= Email%>" size="30">
                                    <span class="highlight"></span>
                                    <label>Email</label>
                               </div>
                            </div>
                            <div class="floating-form">
                                <div class="floating-label">  
                                    <input class="floating-input" type="password"  placeholder=" " name="password"size="30">
                                    <span class="highlight"></span>
                                    <label>password</label>
                                </div>
                            </div>
                        <%}
                        
                    }else{%>
                        <div class="floating-form">
                            <div class="floating-label">  
                                <input class="floating-input"  type="text" placeholder=" " name="Email"  size="30">
                                <span class="highlight"></span>
                                <label>Email</label>
                            </div>
                        </div>
                        <div class="floating-form">
                            <div class="floating-label">  
                                    <input class="floating-input" type="password" placeholder=" " name="password"size="30">
                                    <span class="highlight"></span>
                                    <label>password</label>
                                </div>
                            </div>
                    <%}%>
                    
                    
                    <input type="submit" id="loginbutton" name="Login" value="login"><br><br>
                    <div id="register"><p>Don't have an account? <a href="/signup">Register</a></p></div>
                </form>
                
            </div>
            
                
           <% if (typeof message!=='undefined'){%>
              <div id="errormsg" ><p><%= message%></p></div>
           <%}%>
        </div>
    </main>
    
        <aside>
           <%include ../partials/site-navigation.ejs%>
           
        </aside>

        <% include ../partials/footer.ejs%>
    
   
    
</body>
</html>